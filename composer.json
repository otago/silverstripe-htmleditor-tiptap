  "keywords": [
    "silverstripe",
    "editor",
    "wysiwyg",
    "tiptap"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "require": {
    "silverstripe/vendor-plugin": "^2.0",
    "silverstripe/framework": "^5.0 || ^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "extra": {
    "installer-name": "silverstripe-tiptap",

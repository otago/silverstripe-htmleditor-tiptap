{
  "name": "otago/silverstripe-tiptap",
  "description": "SilverStripe Tiptap WYSIWYG editor",
  "type": "silverstripe-vendormodule",
  "keywords": [
    "silverstripe",
    "editor",
    "wysiwyg",
    "tiptap"
  ],
  "license": "BSD-3-Clause",
  "require": {
    "silverstripe/framework": "^5.0 || ^6.0"
  },
  "extra": {
    "installer-name": "silverstripe-tiptap",
    "expose": [
      "client/dist",
      "client/css",
      "client/ext"
    ],
    "silverstripe-module": {
      "name": "TipTap Editor",
      "description": "TipTap WYSIWYG editor for SilverStripe"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
